{% extends "AdminBundle::admin_layout.html.twig" %}

{% block menu %}
	{{ knp_menu_render('AdminBundle:Builder:adminMenu') }}
{% endblock %}

{% block rastro %}{{ wo_render_breadcrumbs() }}{% endblock %}

{% block titulo %}Reporte Citas{% endblock %}

{% block msg %}
	{% if app.session.flash('ok') %}
	    <div class="success mensajes">
	        <span>{{ app.session.flash('ok') }}</span>
	    </div>
	{% elseif app.session.flash('info') %}
		<div class="info">
	        <span>{{ app.session.flash('info') }}</span>
	    </div>
	{% elseif app.session.flash('error') %}
		<div class="error">
	        <span>{{ app.session.flash('error') }}</span>
	    </div>
	{% endif %}
{% endblock %}


{% block cuerpo %}

<div>
		<table border="1">
			<thead> 
				<tr>
					<th><b> Fecha				</b></th>
					<th><b> Codigo Cargo		</b></th>		
					<th><b> Nombre Cargo		</b></th>
					<th><b> Cantidad 			</b></th>
					<th><b> Estado				</b></th>					
					<th><b> Nombre Agenda		</b></th>
					<th><b> Nombre Sede			</b></th>							
				</tr>
			</thead>
			<tbody>
				{% for entity in entities %}
					<tr>
						<td>{{ entity.hora | date('d/m/Y H:i') }}</td>
						<td>{{ entity.cups}}</td>
						<td>{{ entity.nombre}}</td>
						<td>{{ entity.cantidad }}</td>
						<td>{{ entity.estado}}</td>
						<td>{{ entity.agenda }}</td>
						<td>{{ entity.sede }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	      		
{% endblock %}